<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kmucs.dugeun.Duguen">

    <TextView
        android:id="@+id/textView"
        android:layout_width="415dp"
        android:layout_height="82dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/mainlogo"
        android:textAlignment="center"
        android:textSize="80sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        tools:layout_editor_absoluteX="-2dp" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="410dp"
        android:layout_height="420dp"
        android:layout_marginTop="147dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp">

        <TableRow
            android:layout_width="410dp"
            android:layout_height="110dp"
            android:layout_weight="2">

            <ImageButton
                android:id="@+id/button"
                android:layout_width="205sp"
                android:layout_height="140dp"
                android:background="@drawable/country"
                android:onClick="country"
                android:text="여행지 메모"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="205dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:background="@drawable/onememo"
                android:onClick="memo"
                android:text="한 줄 메모" />
        </TableRow>

        <TableRow
            android:layout_width="120dp"
            android:layout_height="110dp">

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:background="@drawable/exchangemenu"
                android:onClick="exchange"
                android:text="환율"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:background="@drawable/account"
                android:onClick="cash"
                android:text="가계부"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:background="@drawable/map"
                android:onClick="map"
                android:text="지도"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:background="@drawable/info2"
                android:onClick="menuinfo"
                android:text="개발자 정보"
                android:layout_weight="1"/>
        </TableRow>

    </TableLayout>


</android.support.constraint.ConstraintLayout>
