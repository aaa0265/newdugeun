<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ffffffff"
	>
	<RelativeLayout
		android:id="@+id/titleLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:background="#ffffffff"
		>

		<Button
			android:id="@+id/titleBackgroundBtn"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_marginTop="10dp"
			android:background="@android:color/background_light"
			android:paddingTop="0dp"
			android:text="내용을 입력하세요!"
			android:textAlignment="center"
			android:textColor="#C59B7F"
			android:textSize="25sp"
			android:textStyle="bold" />
	</RelativeLayout>


	<LinearLayout
		android:id="@+id/contentsLayout"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="4dp"
		android:layout_marginRight="4dp"
		android:layout_below="@+id/titleLayout"
		>

		<LinearLayout
			android:id="@+id/mediaLayout"
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_gravity="center_horizontal"
			>

			<ImageView
				android:id="@+id/insert_photo"
				android:layout_width="200dp"
				android:layout_height="160dp"
				android:background="#ECCFC9"
				android:scaleType="fitCenter"
				android:src="@drawable/person_add" />

		</LinearLayout>


		<LinearLayout
			android:id="@+id/memoLayout"
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:layout_gravity="center_horizontal"
			>

			<EditText
				android:id="@+id/insert_memoEdit"
				android:layout_width="200dp"
				android:layout_height="160dp"
				android:layout_margin="5dp"
				android:background="#ECCFC9"
				android:gravity="top"
				android:padding="10dp"
				android:textColor="#ff000000"
				android:textSize="18dp"
				android:textStyle="bold" />
		</LinearLayout>
		<Button
			android:id="@+id/insert_dateBtn"
			android:layout_width="240dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_margin="20dp"
			android:layout_marginTop="10dp"
			android:backgroundTint="#D3B39E" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/buttonLayout"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="25dp"
		android:layout_alignParentBottom="true"
		>

		<LinearLayout
			android:id="@+id/buttonLayouts"
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal">

			<Button
				android:id="@+id/insert_saveBtn"
				android:layout_width="100dp"
				android:layout_height="50dp"
				android:layout_marginLeft="10dp"
				android:background="@drawable/msave" />
			<Button
				android:id="@+id/delete_Btn"
				android:layout_width="100dp"
				android:layout_height="50dp"
				android:layout_marginLeft="20dp"
				android:background="@drawable/mdelete"
				android:visibility="gone"
				/>
			<Button
				android:id="@+id/insert_cancelBtn"
				android:layout_width="100dp"
				android:layout_height="50dp"
				android:layout_marginLeft="20dp"
				android:background="@drawable/mclose"
				/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
